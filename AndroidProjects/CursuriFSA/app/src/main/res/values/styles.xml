<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CircleProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/progress</item>
        <item name="android:progressBackgroundTint">@color/progressBackground</item>
    </style>
</resources>
